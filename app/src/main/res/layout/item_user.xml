<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/putih_transparan"
    android:layout_margin="8dp">
    <ImageView
        android:id="@+id/imageorang"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/imageorang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imageorang"
        app:layout_constraintTop_toTopOf="@+id/imageorang"
        app:layout_constraintBottom_toBottomOf="@+id/imageorang"

        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_nama_pengirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="Nama Pengirim"
            android:textSize="13sp"
            android:fontFamily="@font/poppinsmedium"
            />
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="Title"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="13sp"
         />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>